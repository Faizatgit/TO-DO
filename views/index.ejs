<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
</head>
<body>
  <h1>Task Manager</h1>
  <form action="/search" method="GET">
    <input type="text" name="keyword" placeholder="Search by title" required>
    <button type="submit">Search</button>
  </form>
  <ul>
    <% tasks.forEach(task => { %>
      <li>
        <strong><%= task.title %></strong> - <%= task.description %> (<%= task.status %>)
        <a href="/edit/<%= task._id %>">Edit</a>
        <a href="/delete/<%= task._id %>" onclick="return confirm('Are you sure you want to delete this task?')">Delete</a>
      </li>
    <% }); %>
  </ul>
  <a href="/addTask">Add New Task</a>
</body>
</html>
